{
  "compilerOptions": {
    "target": "es2016",
    "module": "ES6",
    "outDir": "build",                          
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,         
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "include": ["./src"]
}
